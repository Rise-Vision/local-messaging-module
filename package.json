{
  "name": "local-messaging-module",
  "version": "1.0.0",
  "description": "Player local messaging module",
  "main": "src/index.js",
  "scripts": {
    "build": "jshint src && ./pre-build.sh && webpack --env.MODULE_VERSION=$(cat version) --config webpack.config.js && ./post-build.sh",
    "test": "jshint src && istanbul cover node_modules/mocha/bin/_mocha -- --reporter mocha-junit-reporter --reporter-options mochaFile=test/test-results.xml --recursive test/unit",
    "test-no-coverage": "jshint . && mocha --recursive test/unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rise-Vision/local-messaging-module.git"
  },
  "author": "Rise Vision",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Rise-Vision/local-messaging-module/issues"
  },
  "homepage": "https://github.com/Rise-Vision/local-messaging-module#readme",
  "devDependencies": {
    "babel-minify-webpack-plugin": "^0.2.0",
    "common-display-module": "git://github.com/Rise-Vision/common-display-module.git#v1.2.0",
    "copy-webpack-plugin": "^4.1.1",
    "istanbul": "^0.4.5",
    "jshint": "^2.9.5",
    "mocha": "^4.0.0",
    "mocha-junit-reporter": "^1.15.0",
    "simple-mock": "^0.8.0",
    "unzipsfx-webpack-plugin": "git+https://github.com/Rise-Vision/unzipsfx-webpack-plugin.git",
    "webpack": "^3.7.1",
    "webpack-node-externals": "^1.6.0",
    "zip-webpack-plugin": "^2.0.0"
  },
  "dependencies": {
    "node-ipc": "^9.1.1",
    "primus": "^7.1.0",
    "uws": "^8.14.1",
    "ws": "^3.2.0"
  }
}
